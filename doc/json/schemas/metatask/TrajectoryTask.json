{
  "title": "mc_tasks::TrajectoryTask",
  "description": "target or surfaceTarget must be specified",
  "type": "object",
  "properties":
  {
    "type": { "enum": ["trajectory"] },
    "name": { "type": "string" },
    "robotIndex": { "type": "integer", "minimum": 0 },
    "surface": { "type": "string" },
    "duration": { "type": "number", "minimum": 0 },
    "stiffness": { "type": "number", "minimum": 0 },
    "posWeight": { "type": "number", "minimum": 0 },
    "oriWeight": { "type": "number", "minimum": 0 },
    "target":
    {
      "description": "Ignored if targetSurface is specified",
      "$ref": "/../../sva/PTransformd.json"
    },
    "controlPoints":
    {
      "type": "array",
      "description": "List of waypoints.\nIgnored if targetSurface or nrWP is specified",
      "items": { "$ref": "/../../eigen/Vector3d.json" }
    },
    "oriWaypoints":
    {
      "type": "array",
      "description": "List of pair of time point and absolute orientation\nIgnored if targetSurface is specified",
      "items":
      [
        {
          "type": "number"
        },
        {
          "$ref": "/../../eigen/Matrix3d.json"
        }
      ],
      "minItems": 2,
      "maxItems": 2
    },
    "targetSurface": { "$ref" : "/../../common/trajectory_targetSurface.json" },
    "activeJoints": { "type": "array", "items": { "type": "string" } },
    "unactiveJoints": { "type": "array", "items": { "type": "string" } },
    "nrWP":
    {
      "type": "integer",
      "description": "Compute nrWp waypoints automatically",
      "minimum": 0
    }
  },
  "required": ["type", "robotIndex", "surface"]
}
